<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHeightInfo">


    <TextView
        android:id="@+id/height_info_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:textSize="18sp"
        android:text="@string/height_info" />


    <ImageView
        android:id="@+id/height_info_img"
        android:layout_width="174dp"
        android:layout_height="192dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:src="@drawable/ic_launcher_background" />


    <NumberPicker
        android:id="@+id/num_picker_feet"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp"
        android:layout_marginStart="31dp">

    </NumberPicker>

    <NumberPicker
        android:id="@+id/num_picker_inch"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_alignEnd="@+id/height_info_img"
        android:layout_alignTop="@+id/num_picker_feet">

    </NumberPicker>

    <TextView
        android:id="@+id/feet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/feet_vs_inch"
        android:layout_marginBottom="110dp"
        android:text="Feet"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/inch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/next_page_btn"
        android:layout_alignTop="@+id/feet_text"
        android:text="Inches"
        android:textSize="22sp" />
    <Button
        android:id="@+id/next_page_btn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#cdd3f4"
        android:text="Next" />

    <ToggleButton
        android:id="@+id/feet_vs_inch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="124dp"
        android:checked="true"

        android:text="FeetvsInch"
        android:textOff="Feet/Inch"
        android:textOn="Meter/Cm" />

</RelativeLayout>