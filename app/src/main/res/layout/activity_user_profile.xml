    tools:context=".UserProfileActivity">

    <include layout="@layout/toolbar"></include>

    <android.support.v7.widget.CardView
        android:id="@+id/weight_card_view"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_text"
                style="@style/TextView"
                android:paddingTop="0dp"
                android:textColor="@color/primary_text"
                android:text="@string/unregistered_user"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/profile_age_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/unregistered_user"
                android:textAlignment="center"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/profile_gender_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/unregistered_user"
                android:textAlignment="center"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/profile_height_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/unregistered_user"
                android:textAlignment="center"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/profile_current_weight_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/unregistered_user"
                android:textAlignment="center"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/profile_activity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/unregistered_user"
                android:textAlignment="center"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/profile_goal_weight_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/unregistered_user"
                android:textAlignment="center"
                android:textColor="@color/primary_text" />

