<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="userinfo.UserWeightInfoActivity">

    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <TextView
        android:id="@+id/weight_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:text="@string/weight_info"
        android:textAlignment="center"
        android:textColor="@color/title_text_color"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:src="@drawable/food2" />

    <Button
        android:id="@+id/next_page_btn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#cdd3f4"
        android:text="@string/next" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="132dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_level_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:text="@string/activity_level"
                android:textColor="@color/title_text_color"
                android:textSize="22dp" />


            <Spinner
                android:id="@+id/spinnerActivityLevel"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="20dp"
                android:entries="@array/array_activity_levels"
                android:textColor="@color/title_text_color"
                android:textSize="22dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:text="@string/current_weight"
                android:textColor="@color/title_text_color"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/weight_editText_id"
                android:layout_width="150dp"
                android:layout_height="41dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/title_text_color" />

            <TextView
                android:id="@+id/kg_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:text="@string/kg"
                android:textColor="@color/title_text_color"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/target_weight_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:text="@string/target_weight"
                android:textColor="@color/title_text_color"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/weight_editText_id2"
                android:layout_width="150dp"
                android:layout_height="41dp"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:inputType="number"
                android:textColor="@color/title_text_color" />

            <TextView
                android:id="@+id/kg_text2"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginStart="13dp"
                android:text="@string/kg"
                android:textColor="@color/title_text_color"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kg_vs_lbs_text"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:text="@string/weight_input_unit"
                android:textColor="@color/title_text_color"
                android:textSize="22dp" />

            <ToggleButton
                android:id="@+id/lbs_vs_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:checked="true"
                android:text="@string/lbsvskg"
                android:textOff="@string/lbs"
                android:textOn="@string/kg" />


        </LinearLayout>

    </LinearLayout>



