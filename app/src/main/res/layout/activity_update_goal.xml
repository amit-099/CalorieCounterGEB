<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateGoalActivity"
    android:background="@drawable/shattered">

    <include layout="@layout/toolbar">
    </include>

    <TextView
        android:id="@+id/goal_weight_text_view"
        style="@style/TextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:paddingTop="0dp"
        android:text="@string/update_weight"
        android:textColor="@color/primary_text" />

    <android.support.v7.widget.CardView
        android:id="@+id/weight_card_view"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goal_weight_text"
                style="@style/TextView"
                android:paddingTop="0dp"
                android:textColor="@color/primary_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="72dp">

                    <EditText
                        android:id="@+id/input_goal_weight"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter goal weight"
                        android:inputType="numberDecimal" />
                </android.support.design.widget.TextInputLayout>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/btn_kg_lbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="71dp"
                    android:layout_marginBottom="8dp"

                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/colorButton"
                    fancy:fb_focusColor="#9bd823"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="KG"
                    fancy:fb_textColor="#FFFFFF" />

            </RelativeLayout>


            <TextView
                android:id="@+id/goal_weight_motivation_text"
                style="@style/TextView"
                android:paddingTop="10dp"
                android:text="@string/weight_estimation" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:padding="12dp"
                    android:text="CONTINUE"
                    android:background="@color/colorPrimary"/>

            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>